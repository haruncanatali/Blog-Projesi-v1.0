@using BlogUygulamasi.Entities.Concrete;
@model List<Yazi>

@if (Model.Count() > 0)
{
    foreach (Yazi item in Model)
    {
        <div class="card mt-3">
            <div class="card-header">
                <p class="h5 text-center font-weight-bold">
                    @item.YaziBaslik
                </p>
            </div>
            <img src="~/img/@item.YaziResimUrl" style="width:300px; height:300px;" class="card-img-top mt-3 mx-auto" alt="...">
            <div class="card-body mx-auto">
                <a href="/Yazi/Details/@item.YaziId" class="btn btn-primary">İlgili yazıyı okumak için tıkla!</a>
            </div>

        </div>
    }
}
else
{
    <div class="alert alert-danger">
        <p class="text-danger">
            Sistemde yorum YOK!!
        </p>
    </div>
}
