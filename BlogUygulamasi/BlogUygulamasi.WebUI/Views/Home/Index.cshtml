@using BlogUygulamasi.Entities.Concrete
@model List<Yazi>

@{
    ViewBag.Title = "Index";
}

<div class="card mb-5">
    <div class="card-header bg-secondary text-white">
        <p class="h4 text-center font-weight-bold">
            Merhaba! Kişisel Bloğuma Hoşgeldiniz
        </p>
    </div>
    <img src="~/img/myFoto.jpg" style="width:300px; height:300px;" class="card-img-top rounded-circle mt-3 mx-auto" alt="...">
    <div class="card-body">
        <p class="card-text text-center h5">
            Merhaba ben Harun.Ben bir bilgisayar mühendisliği öğrencisiyim. Okul hayatım boyunca veri yapıları, veritabanı tasarımı ve optimizasyonu ve .net teknolojileri üzerinde çalıştım.
        </p>
    </div>
</div>

@if (Model.Count() > 0)
{
    foreach (Yazi item in Model)
    {
        <div class="card mt-3">
            <div class="card-header">
                <p class="h5 text-center font-weight-bold">
                    @item.YaziBaslik
                </p>
            </div>
            <img src="~/img/@item.YaziResimUrl" style="width:200px; height:200px;" class="card-img-top mt-3 mx-auto" alt="...">
            <div class="card-body mx-auto">
                <a href="/Yazi/Details/@item.YaziId" class="btn btn-primary">İlgili yazıyı okumak için tıkla!</a>
            </div>
    
        </div>
    }
}


